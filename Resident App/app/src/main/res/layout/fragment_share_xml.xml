<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ShareXml"
    android:layout_margin="32dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/logo_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-medium"
        android:text="Your eKYC file. Please do not change the name of the file."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:transitionName="logo_desc"
        />

    <ImageView
        android:id="@+id/pinQrImageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_baseline_file_present_24"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-medium"
        android:text="E-KYC"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:transitionName="logo_desc"
        />

    <Button
        android:id="@+id/btnShareEkyc"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:textColor="@color/black"
        android:text="Share"
        android:textSize="30dp"
        />






</LinearLayout>